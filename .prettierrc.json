{
  "trailingComma": "all",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 80,
  "arrowParens": "always",
  "endOfLine": "lf",
  "editorconfig": true,
  "importOrder": [
    "^react$",
    "^react-native$",
    "^@react-navigation/(.*)$",
    "^@screens/(.*)$",
    "^@components/(.*)$",
    "^[./]",
    "^@assets/(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
